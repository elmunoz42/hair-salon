<!DOCTYPE html>
<html>
    <head>
        <title>Hair Salon</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link href='/css/styles.css' rel='stylesheet' type='text/css'>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="jumbotron" id="title">
                    <h1>Your Hair Salon</h1>
                    <label><a href="/clients">back to clients</a></label><br>
                    <label><a href="/stylists">back to stylists</a></label><br>
                    <label><a href="/">back to home</a></label>
                </div>
            </div>
            <!-- row  -->
            <div class="row">
                <div class="col-md-6">
                    <div class="jumbotron">
                        <h3><a href="/stylists">Stylists</a></h3>
                        {% if stylists is not empty %}
                                {% for stylist in stylists %}
                                <ul>
                                <li> name: <a href="/stylists/{{ stylist.getId }}">{{ stylist.getName }}</a></li>
                                <li> id: {{ stylist.getId }}</li>
                                </ul>
                                {% endfor %}
                        {% else %}
                        <p>No Stylists Registered.</p>
                        {% endif %}
                    </div>
                    <!-- jumbotron -->
                </div>
                <!-- left column -->
                <div class="col-md-6">
                    <div class="jumbotron">
                        <h3>Register New Stylist</h3>
                        <form action="/stylists" method="post">
                            <label for="stylist_name">Stylist name:</label><br>
                            <input type="text" name="stylist_name" value=""><br>
                            <button type="submit" name="register-stylist">Submit</button>
                        </form>
                        <h3>Delete All</h3>
                        <form action="/stylists" method="post">
                        <input name="_method" type="hidden" value="delete" required>
                        <button type="submit" class="btn button-danger" name="button">Delete All Stylists.</button>
                        </form>
                        <!-- create form -->
                    </div>
                    <!-- jumbotron -->
                </div>
                <!-- right column -->
            </div>
            <!-- row -->
        </div>
    </body>
</html>
